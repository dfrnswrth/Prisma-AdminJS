{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ESM",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["esnext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "ESNext",
    "allowImportingTsExtensions": true
  },
  "exclude": ["node_modules"]
}
